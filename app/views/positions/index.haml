%table.table
  - flash.each do |type, msg|
    %div{:class => "alert alert-primary"}
      = msg

  %thead.thead-dark
    %tr
      %th{:scope => "col"} Titulo
      %th{:scope => "col"} Carreira
      %th{:scope => "col"} Local
      %th{:scope => "col"} Tipo de Contrato
      %th{:scope => "col"} Candidaturas
      %th{:scope => "col"} Açoes
  %tbody
    - @positions.each do |position|
      %tr
        %th{:scope => "row"}= position.name
        %td= position.career
        %td= position.city
        %td= position.contract
        %td= modality(position)
        %td 1 (ver detalhes)
        %td= link_to "Ver aplicaçações (#{position.applicants.count})", position_applicants_path(position), class: 'btn btn-secundary'
        %td= link_to 'Editar', edit_position_path(position), class: 'btn btn-primary'
