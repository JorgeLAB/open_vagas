.card-body
  .container.container-card
    .row
      .col-2
        %img.card-img-top{alt: "Card image cap", src: ""}
      .col-10
        %h4= position.name
        %h5=  "#{Position.human_attribute_name(position.career)} / #{position.state}"
        %p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
        tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
        .row
          .col-sm.mt-3
            %button.btn.btn-danger{type: "button"} Ver mais
            %button.btn.btn-success{type: "button"} Canditar-se
          .col-sm.text-right.mt-3.group-social-network
            = link_to image_tag('social-network/linkedin.svg', alt: 'Icone do Linkedin', height: '32px'), 'https://www.linkedin.com/sharing/share-offsite/?url=https://www.linkedin.com/in/jorge-borges-90965121a/'
            = link_to image_tag('social-network/whatsapp.svg', alt: 'Icone do Whatsapp', height: '32px'), '#'
            = link_to image_tag('social-network/twitter.svg', alt: 'Icone do Twitter', height: '32px'), '#'
            = link_to image_tag('social-network/copy.svg', alt: 'Icone do Copy', height: '32px', class: 'copy-icon'), '#', class: 'copy-url', data: {'clipboard-text': "#{url_position(position)}"}
